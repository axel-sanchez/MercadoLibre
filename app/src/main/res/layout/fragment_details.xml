<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="25dp"
        android:textSize="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@android:color/black"
        android:text="ESTE ES EL TITULO"
        android:gravity="center_horizontal" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/availableQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@android:color/black"
        android:text="AGOTADO"/>

    <TextView
        android:id="@+id/originalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginEnd="10dp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/availableQuantity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/price"
        android:text="$30000"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/availableQuantity"
        app:layout_constraintStart_toEndOf="@id/originalPrice"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@android:color/black"
        android:text="$30000"/>

    <TextView
        android:id="@+id/freeShipping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/free_shipping"
        android:background="@drawable/textview_shipping"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/price"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/titleSeller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VENDEDOR"
        android:layout_marginTop="25dp"
        android:textSize="30dp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/freeShipping"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/logoSeller"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/titleSeller"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/nameSeller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fravega"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/logoSeller"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/adressSeller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="Villa Dominguez, Villa Carlos Paz, CÃ³rdoba"
        app:layout_constraintTop_toBottomOf="@id/nameSeller"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/soldProducts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1000 ventas"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/adressSeller"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>